{
  "mcpServers": {
    "memory-bank": {
      "command": "bunx",
      "args": ["-y", "@allpepper/memory-bank-mcp"],
      "env": {
        "MEMORY_BANK_ROOT": "./.specs"
      },
      "type": "stdio"
    },
    "ai-distiller": {
      "command": "aid-mcp",
      "args": [],
      "type": "stdio"
    },
    "sequential-thinking": {
      "command": "bunx",
      "args": ["@modelcontextprotocol/server-sequential-thinking"],
      "type": "stdio"
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server",
        "--enable-web-dashboard",
        "false",
        "--enable-gui-log-window",
        "false",
        "--context",
        "ide-assistant"
      ],
      "type": "stdio"
    },
    "shadcn": {
      "command": "bunx",
      "args": ["shadcn@latest", "mcp"],
      "type": "stdio"
    }
  }
}
